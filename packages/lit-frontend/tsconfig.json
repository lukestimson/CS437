{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,   //This is crucial for using decorators, like @property from Lit
    "useDefineForClassFields": true,  //changed to true - troubleshooting
    "module": "ESNext",
    "lib": ["ES2020", "ESNEXT" ,"DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}

